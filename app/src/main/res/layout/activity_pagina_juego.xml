<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/f2"
    tools:context=".PaginaJuego">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:fontFamily="@font/luckiestguy_regular"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textoTurno"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Turno de X"
        android:textSize="30sp"

        android:layout_marginHorizontal="100dp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:fontFamily="@font/nabla_regular_variablefont_edpt_ehlt" />

    <!-- Cuadricula 3x3  -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_margin="2dp"
        android:padding="20dp">

        <!-- 9 ImageButtons (una celda cada uno) -->
        <ImageButton
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 0" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 1" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 2" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 3" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 4" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 5" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 6" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 7" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:scaleType="centerInside"
            android:contentDescription="Botón 8" />

    </GridLayout>

    <Button
        android:id="@+id/buttonReiniciar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/reiniciar"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/luckiestguy_regular"
        android:backgroundTint="@color/teal_200"/>

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/luckiestguy_regular"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/teal_200"/>

</LinearLayout>