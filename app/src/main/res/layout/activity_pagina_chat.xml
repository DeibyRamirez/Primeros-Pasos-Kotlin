<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".PaginaChat">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/luckiestguy_regular"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp" />



    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nombre de usuario"
            android:textStyle="bold"
            android:fontFamily="@font/luckiestguy_regular"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_white"
            android:src="@drawable/ic_c"
            android:padding="6dp"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- CHAT CON SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/chat_background"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/contenedorChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </ScrollView>

    <!-- Input y botÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtMensaje"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white"
            android:hint="Escribe un mensaje..."
            android:padding="10dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/botonEnviarMensaje"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_white"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/enviar" />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:columnCount="1"
        android:rowCount="2">

        <Button
            android:id="@+id/botonCrearPartida"
            style="@style/Botones"
            android:text="@string/partida" />

    </GridLayout>

</LinearLayout>
