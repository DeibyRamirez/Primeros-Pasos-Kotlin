<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f2"
    tools:context=".Personalizar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personalizar"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/luckiestguy_regular"
            android:layout_marginBottom="20dp" />

        <!-- CARD 1: Fondos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fondo de Pantalla"


                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona el fondo para toda la aplicación"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#666"/>

                <!-- Vista previa fondos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="center"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/fondo1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/f2"
                        android:scaleType="centerCrop"
                        android:layout_margin="8dp" />

                    <ImageView
                        android:id="@+id/fondo2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/f2"
                        android:scaleType="centerCrop"
                        android:layout_margin="8dp" />

                    <ImageView
                        android:id="@+id/fondo3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/fondo_kotlin"
                        android:scaleType="centerCrop"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- CARD 2: Fichas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:padding="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fichas (X / O)"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elige las imágenes de las fichas del juego"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#666"/>

                <!-- Vista previa fichas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/fichaX"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_c"
                        android:layout_margin="8dp" />

                    <ImageView
                        android:id="@+id/fichaO"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_x"
                        android:layout_margin="8dp" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Botón Guardar -->
        <Button
            android:id="@+id/botonGuardar"
            style="@style/Botones"
            android:layout_marginTop="35dp"
            android:text="@string/guardar" />

    </LinearLayout>

</ScrollView>
